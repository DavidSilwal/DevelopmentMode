@model IList<WebApplication.Data.MessageTemplate>


<p><a asp-action="Create">Create New</a></p>

<br />
<table class="table">
    <tr>
        <th>
            <label>Subject</label>
        </th>
        <th>
            <label>Body</label>
        </th>
        <th>
            <label>Mail From</label>
        </th>
        <th>
            <label>Added On</label>
        </th>

        <th>
            <label>Is Active</label>
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)


            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)

            </td>
            <td>
               @Html.DisplayFor(modelItem => item.MailFrom)
                
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AddedOn)

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.IsActive)

            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item._id }) |
                @Html.ActionLink("Details", "Details", new { id = item._id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item._id })
            </td>
        </tr>
    }

</table>