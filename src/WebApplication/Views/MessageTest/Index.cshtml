@model WebApplication.Models.SendEmailViewModel

@{ 
    ViewData["Title"] = "Create Role";
    var messageType = ViewBag.MessageType;
}


<div class="panel mb25">
    <div class="panel-heading border">
        Send Message
    </div>
    <div class="panel-body">
        <div class="row no-margin">
            <div class="col-lg-12">

                <form asp-controller="MessageTest" asp-action="SendEmail" role="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    
                    
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="MessageTypeID" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <select asp-for="MessageTypeID" asp-items="messageType" class="form-control"></select>
                                    <span asp-validation-for="MessageTypeID" class="text-danger" />
                                </div>
                                
                                </div>
                            <br />
                                <div class="row">

                                    <label asp-for="Email" class="col-sm-2 control-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger" />
                                    </div>

                                </div>
                            <br />

                                <div class="row">

                                    <div class="col-sm-2"></div>
                                    <div class="col-sm-10">
                                        <input type="submit" value="Submit" class="btn btn-default btn-sm" />
                                    </div>

                                </div>
                            </div>
                    

                </form>
            </div>
        </div>
    </div>
</div>


