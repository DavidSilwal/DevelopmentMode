@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="form-center">
    <div class="center-block">
        <div class="panel mb25 center-block">
            <div class="panel-heading border">
                Change Password
            </div>
            <div class="panel-body">
                <div class="row no-margin">
                    <div class="col-lg-12">
                        <form asp-action="ChangePassword" method="post" class="form-horizontal bordered-group" role="form">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="OldPassword" class="col-sm-2 control-label sr-only"></label>
                                <div class="col-sm-12">
                                    <input asp-for="OldPassword" class="form-control" placeholder="Old Password" />
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPassword" class="col-sm-2 control-label sr-only"></label>
                                <div class="col-sm-12">
                                    <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="col-sm-2 control-label sr-only"></label>
                                <div class="col-sm-12">
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <input type="submit" value="Change password" class="btn btn-default" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}