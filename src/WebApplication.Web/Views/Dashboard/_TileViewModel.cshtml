@model WebApplication.Models.TileViewModel

<div class="col-lg-3 col-md-6">
    <div class="panel @Model.ColorCssClass">
        <div class="panel-heading">
            <span>@Model.Title</span>
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa @Model.IconCssClass fa-5x"></i>
                </div>
                <div class="col-xs-9 text-rig">
                    <div class="huge">@Model.Value</div>
                </div>
            </div>
        </div>
        <a href="@Model.Url">
            <div class="panel-footer">
                <span class="pull-lef">View Details</span>
            <span class=" pull-right">
                <i class="fa fa-arrow-circle-right"></i></span>
                </div>
            <div class="clearfix">
            </div>
        </a>

    </div>
</div>